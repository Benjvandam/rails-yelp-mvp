<h1>List of all restaurants</h1>
<ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item d-flex justify-content-between"><%= restaurant.name %><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%></li>
  <% end %>
</ul>

<%= link_to "Add a Restaurant", new_restaurant_path, class: "btn btn-primary mt-3"%>
