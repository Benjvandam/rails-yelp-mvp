<h1><%= @restaurant.name %></h2>

<ul class="list-group">
  <li class="list-group-item">Address: <%= @restaurant.address %></li>
  <li class="list-group-item">Phone Number: <%= @restaurant.phone_number %></li>
  <li class="list-group-item">Category: <%= @restaurant.category %></li>
</ul>

<h2>Reviews</h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %> - <%= review.stars %></li>
  <% end %>
</ul>
<p><%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mt-2" %></p>

<p><%= link_to "Back to Overview", restaurants_path, class: "btn btn-primary"%></p>
